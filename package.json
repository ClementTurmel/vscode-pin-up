{
    "publisher": "saekiraku",
    "icon": "resources/logo.png",
	"name": "pin-up",
	"displayName": "Pin Up",
	"description": "Pin up files and folders that was frequently opened in your project.",
    "version": "1.1.0",
	"engines": {
		"vscode": "^1.44.0"
    },
    "repository": {
        "url": "https://github.com/SaekiRaku/vscode-pin-up"
    },
	"categories": [
		"Other"
	],
	"activationEvents": [ "*" ],
	"main": "./src/index.js",
	"contributes": {
        "commands": [
            {
                "command": "pin-up.add-pin",
                "title": "ðŸ“Œ Pin Up"
            },
            {
                "command": "pin-up.add-pin-outside",
                "title": "ðŸ“Œ Pin Up (From outside files)",
                "icon": {
                    "light": "resources/add-light.svg",
                    "dark": "resources/add-dark.svg"
                }
            },
            {
                "command": "pin-up.remove-pin",
                "title": "Remove",
                "icon": {
                    "light": "resources/remove-light.svg",
                    "dark": "resources/remove-dark.svg"
                }
            },
            {
                "command": "pin-up.clear-pin",
                "title": "Remove All"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "view-activitybar",
                    "title": "Pinned Files",
                    "icon": "resources/main-icon.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "view-activitybar",
                "contents": "An extension that allows you to pin up some frequently opened files to here. \n Right click your files, and go for \"ðŸ“ŒPin Up\"! \n [Learn More](https://github.com/SaekiRaku/vscode-pin-up)"
            }
        ],
        "views": {
            "view-activitybar": [
                {
                    "id": "view-activitybar",
                    "name": "Pinned Files"
                }
            ],
            "explorer": [
                {
                    "id": "view-explorer",
                    "name": "Pinned Files",
                    "when": "pin-up.have-pinned-files"
                }
            ]
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "pin-up.add-pin"
                }
            ],
            "view/title": [
                {
                    "command": "pin-up.add-pin-outside",
                    "group": "navigation"
                },
                {
                    "when": "view == view-activitybar || view == view-explorer",
                    "command": "pin-up.clear-pin"
                }
            ],
            "view/item/context": [
                {
                    "when": "viewItem == pinned",
                    "command": "pin-up.remove-pin",
                    "group": "inline"
                },
                {
                    "when": "viewItem == pinned",
                    "command": "pin-up.remove-pin"
                }
            ]
        }
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "build": "vsce package"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
